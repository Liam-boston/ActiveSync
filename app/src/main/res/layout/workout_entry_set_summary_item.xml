<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/workout_summary_item_label_exercise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise Name"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/workout_summary_item_label_exercise_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 sets, 180kg max "
                />
        </LinearLayout>


        <ImageButton
            android:id="@+id/workout_summary_item_button_edit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_edit_24"
            android:layout_gravity="center"
            />

        <ImageButton
            android:id="@+id/workout_summary_item_button_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_delete_forever_24"
            android:layout_gravity="center"
            />



    </LinearLayout>

</androidx.cardview.widget.CardView>
