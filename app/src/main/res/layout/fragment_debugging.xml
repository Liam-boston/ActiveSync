<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".DebuggingFragment"
    >

    <TextView
        android:id="@+id/dbg_saved_workouts_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/debugging_view_nsaved_workouts"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:layout_margin="32dp"
        android:textStyle="bold"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/dbg_nuke_database_button"
        android:text="@string/nuke_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <ListView
        android:id="@+id/dbg_saved_workouts_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>